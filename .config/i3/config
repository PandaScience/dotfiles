# Bar
bar {
	tray_output primary
	# status_command i3blocks -c /home/rene/.config/i3/i3blocks.conf
	# font pango: System San Francisco Display, FontAwesome 9

	height 20 # for 12pt --> 22
	# font pango:FiraCode 11
	# font pango:DejaVuSansMono,FontAwesome 11
	font pango:DejaVuSansMonoNerdFontMono 11
	# indicator kernel_mod uptime_mod caffeine pasink pasource \
	status_command bumblebee-status -m \
		arch-update indicator kernel_mod caffeine pasink pasource \
			brightness cpu2 memory disk nic battery date time dunstctl \
		-p time.format="%H:%M" date.format="%a, %b %d (%V)" \
		-p memory.format="{free}" \
		-p nic.states="^down" nic.format="{intf} {ip}"\
		-p disk.format="{left}" disk.path="/home" \
		-p indicator.include="capslock" indicator.signalstype="warning" \
		-p cpu2.colored=1 cpu2.layout="cpu2.coresload cpu2.temp cpu2.fanspeed" \
		-p cpu2.temp_pattern=temp1_input cpu2.fan_pattern=fan1_input \
		-p brightness.interval=5s \
		-p interval=5s \
		-t iceberg-rainbow \
		-a indicator

	i3bar_command i3bar -t
	position top
	# strip_workspace_numbers yes
	# height 25
	bindsym button4 nop
	bindsym button5 nop
	colors {
		separator $base03
		background $base01
		statusline $base05
		#                  border  background text
		focused_workspace  $base01 $base01    $base07
		active_workspace   $base01 $base02    $base03
		inactive_workspace $base01 $base01    $base03
		urgent_workspace   $base01 $base01    $base08
	}
}

# screensaver and locking
# --> needs to be PNG file and for xautolock even in a+rwx path
bindsym $mod+Shift+x exec "dunstctl set-paused true; i3lock -t -i /home/rene/Pictures/backgrounds/lockscreen.png"
# enable energy star power saving and  set display standby | suspend | off time
exec --no-startup-id xset +dpms dpms 300 0 0
# enable screensaver and lock
exec --no-startup-id xset s 300
# exec --no-startup-id xautolock -time 1 -locker "i3lock -t -i /SHARE/lockscreen.png" -detectsleep -notify 30 -notifier "notify-send -u critical -t 10000 -- 'LOCKING screen in 30 sec.'"
exec --no-startup-id xautolock -time 2 -locker "i3lock -t -i /home/rene/Pictures/backgrounds/lockscreen.png" -detectsleep -notify 30 -notifier "notify-send -u critical -t 10000 -- 'LOCKING screen in 30 sec.'"


