# resize window (you can also use the mouse for that)
bindsym $alt+r mode "resize"
bindsym $altgr+r mode "resize"
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # change size
        # bindsym - resize shrink width 10 px or 10 ppt height 10 px or 10 ppt
        bindsym Shift+Down  exec "i3-msg resize shrink up   20px; i3-msg resize shrink down  20px"
        bindsym Shift+Up    exec "i3-msg resize grow up     20px; i3-msg resize grow down    20px"
        bindsym Shift+Left  exec "i3-msg resize shrink left 20px; i3-msg resize shrink right 20px"
        bindsym Shift+Right exec "i3-msg resize grow left   20px; i3-msg resize grow right   20px"

        # for arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}


# move floating windows with keys
bindsym $alt+m mode "move" focus floating
mode "move" {
    bindsym $mod+Tab focus right

    bindsym Left  move left
    bindsym Down  move down
    bindsym Up    move up
    bindsym Right move right

    bindsym h     move left
    bindsym j     move down
    bindsym k     move up
    bindsym l     move right

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


# keys for Lenovo T450s
# F1 - mute				- working
# F2 - Vol. down		- working
# F3 - Vol. up			- wokring
# F4 - XF86AudioMicMute - working
# F5 - backlight down	- working
# F6 - backlight up		- working
# F7 - XF86Display		- working
# F8 - XF86WLAN			- working out of the box :D (BlueTooth not tested)
# F9 - XF86Tools		- not mapped
# F10- XF86Search		- working, mapped to google search
# F12- XF86LaunchA		- working (turn off touchpad tip)
# F12- XF86Explorer		- working (turn off touchpad completely)

# how2 find scancodes/keycodes
# 1) find keycodes if available in kernel
# > xev
# 2) if not find keycodes in TTY:
#    https://wiki.archlinux.org/title/map_scancodes_to_keycodes
# > showkeys --scancodes
# 3) load into kernel via udev
#    /etc/udev/hwdb.d/90-custom-keyboard-DELLxps13.hwdb

# Volume & Media Bindings
bindsym XF86AudioPlay  exec --no-startup-id \
  ps ax | grep -v grep | grep "mpv" > /dev/null && echo cycle pause | socat - "$HOME/.config/mpv/socket" || mpc -q toggle
bindsym XF86AudioPause exec --no-startup-id mpc -q pause
bindsym XF86AudioNext  exec --no-startup-id mpc -q next
bindsym XF86AudioPrev  exec --no-startup-id mpc -q prev

bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%    # increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%    # decrease sound volume
bindsym XF86AudioMute        exec --no-startup-id pactl set-sink-mute   @DEFAULT_SINK@ toggle # mute sound
bindsym XF86AudioMicMute     exec --no-startup-id pactl set-source-mute @DEFAULT_SINK@ toggle # mute microphone
# bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%    # increase sound volume
# bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%    # decrease sound volume
# bindsym XF86AudioMute        exec --no-startup-id pactl set-sink-mute   0 toggle # mute sound
# bindsym XF86AudioMicMute     exec --no-startup-id pactl set-source-mute 0 toggle # mute microphone

# same for 2nd sink (e.g. bluetooth speaker)
bindsym Control+XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 1 +5%
bindsym Control+XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 1 -5%
bindsym Control+XF86AudioMute        exec --no-startup-id pactl set-sink-mute   1 toggle
bindsym Control+XF86AudioMicMute     exec --no-startup-id pactl set-source-mute 1 toggle

# same for 3rd sink (e.g. via HDMI)
bindsym $alt+XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 2 +5%
bindsym $alt+XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 2 -5%
bindsym $alt+XF86AudioMute        exec --no-startup-id pactl set-sink-mute   2 toggle
bindsym $alt+XF86AudioMicMute     exec --no-startup-id pactl set-source-mute 2 toggle

# use search button for google searching
bindsym XF86Search exec --no-startup-id opera -new-tab https://www.google.com; workspace $workspace2

# screen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 5 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 5 # decrease screen brightness

# turn off screen
bindsym XF86Display exec xbacklight -set 0

# turn off touchpad completely
bindsym XF86Explorer exec /home/rene/bin/touchpadOff.sh

# turn off tap2click
bindsym XF86LaunchA exec /home/rene/bin/tap2clickOff.sh


# support for i3bock's CAPS and NUM lock indicator
bindsym --release Caps_Lock exec pkill -SIGRTMIN+11 i3blocks
bindsym --release Num_Lock  exec pkill -SIGRTMIN+11 i3blocks


